<h2>EDIT {{movie.title}}</h2>
<form action="/movies/{{movie.id}}/edit" method="post">
    <label for = "title">Name</label>
    <input id="title" name="title" type="text" value="{{movie.title}}">
    <label for = "plot">Plot</label>
    <input id="plot" name="plot" type="text" value="{{movie.plot}}">
    <label for = "genre">Genre</label>
    <input id="genre" name="genre" type="text" value="{{movie.genre}}">
    <label for = "cast">Cast</label>
    <input id="cast" name="cast" type="text">
    <input type="submit" value="Edit movie">
</form>